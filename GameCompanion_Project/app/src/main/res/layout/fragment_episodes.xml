<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragments.EpisodesFragment"
             android:background="@color/character_bckg">
    <RelativeLayout
            android:id="@+id/finder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/finder_height"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorPrimaryDark">


        <android.support.design.widget.TextInputEditText
                android:id="@+id/findText"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_oval"
                android:hint="@string/find_text_hint_episodes"
                android:padding="5dp"
                android:layout_marginTop="@dimen/findText_margin"
                android:layout_marginLeft="20dp"
        />

        <Button
                android:id="@+id/findButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search_black_24dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:elevation="10dp"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/episodes_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/finder_height"
            app:layout_constraintEnd_toEndOf = "parent"/>
    <TextView
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:text="No-one found with this name"
            android:textSize="@dimen/character_name"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/finder_height_plus_margin"
            android:id="@+id/emptyWarn"
            android:visibility="gone"


    />

</FrameLayout>